# Travya Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=travya_user
POSTGRES_PASSWORD=travya_password
POSTGRES_DB=travya_db

# Application Configuration
PROJECT_NAME=Travya
ENVIRONMENT=local
SECRET_KEY=changethis
FIRST_SUPERUSER=admin@travya.com
FIRST_SUPERUSER_PASSWORD=changethis

# Google AI Studio API
GOOGLE_AI_STUDIO_API_KEY=your_api_key

# External API Keys (add your actual keys here)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
WEATHER_API_KEY=your_weather_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_ENDPOINT=

# Document Storage
DOCUMENT_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# Deployment & Stack
STACK_NAME=travya
DOMAIN=localhost
FRONTEND_HOST=http://localhost:5173
DOCKER_IMAGE_BACKEND=travya-backend
DOCKER_IMAGE_FRONTEND=travya-frontend

BACKEND_CORS_ORIGINS=http://localhost:5173,http://dashboard.localhost

# Email / SMTP
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=

# Monitoring
SENTRY_DSN=
