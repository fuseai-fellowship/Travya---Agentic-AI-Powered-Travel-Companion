# Travya Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_db_user_here
POSTGRES_PASSWORD=your_db_password_here
POSTGRES_DB=your_db_name_here

# Application Configuration
PROJECT_NAME=Travya
ENVIRONMENT=local
SECRET_KEY=your_secret_key_here
FIRST_SUPERUSER=admin@travya.com
FIRST_SUPERUSER_PASSWORD=your_superuser_password_here

# Google AI Studio API
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_studio_api_key_here

# External API Keys (add your actual keys here)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
WEATHER_API_KEY=your_weather_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_project_id_here
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_ENDPOINT=your_vertex_ai_endpoint_here

# Document Storage
DOCUMENT_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760
